// any one condition matches then that stage will execute

pipeline{
    agent{
        label 'java-slave'
    }
    environment{
        Deploy = "dev"
    }
    stages{
        stage('dev'){
            steps{
                echo "dev deloyment"
            }
        }
        stage('prod'){
            when{
                anyOf{
                    environment name: 'Deploy', value: 'prod'
                    expression {BRANCH_NAME == 'prod'} 
                }
            }
            steps{
                echo "prod deployment"
            }
        }
    }
}
